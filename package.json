{
	"name": "@essex/alpha-build-utils",
	"private": true,
	"license": "MIT",
	"contributors": [
		"David Tittsworth <datit@microsoft.com>",
		"Chris Trevino <chtrevin@microsoft.com>"
	],
	"scripts": {
		"clean": "lerna run clean --stream",
		"build": "lerna run build --stream",
		"test": "lerna run test --stream",
		"publish_packages": "lerna publish",
		"essex": "node ./packages/scripts/lib/index.js",
		"release": "run-s build publish_packages",
		"lint": "yarn essex lint --docs --strict",
		"prettify": "yarn essex prettify",
		"audit_dependencies": "yarn essex audit",
		"git_is_clean": "yarn essex git-is-clean",
		"ci": "run-s build lint test git_is_clean"
	},
	"workspaces": {
		"packages": [
			"packages/*"
		]
	},
	"devDependencies": {
		"husky": "^4.2.5",
		"lerna": "^3.20.2",
		"npm-run-all": "^4.1.5"
	}
}
